.image-list
	list-style-type none
	padding-left 0
	li	
		display inline-block
		height 140px
		a
			display block
			width 140px
			height 140px
			background-size cover
			background-position center
	li:hover
		transform scale(2)
		box-shadow -10px -10px 5px rgba(0, 0, 0, 0.5)
		transition transform 0.2s, box-shadow 0.2s